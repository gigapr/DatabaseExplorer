@{
    ViewBag.Title = "Server";
}

@section javascript{
    <script src="../../Scripts/Views/DatabaseExplorer/Index.js" type="text/javascript"></script>
}


<ul class="folders" data-bind="foreach: folders">
    <li data-bind="text: $data,
                   css: { selected: $data == $root.chosenFolderId() },
                   click: $root.goToFolder"></li>
</ul>

<style type="text/css">
  
body {
    font-family: Helvetica,Arial;
}
.folders {
    background-color: #BBBBBB;
    border-radius: 7px 7px 7px 7px;
    font-size: 0;
    list-style-type: none;
    margin: 10px 0 16px;
    padding: 0;
}
.folders li:hover {
    background-color: #DDDDDD;
}
.folders li:first-child {
    border-left: medium none;
    border-radius: 7px 0 0 7px;
}
.folders li {
    border-left: 1px solid #DDDDDD;
    border-right: 1px solid #888888;
    color: #444444;
    cursor: pointer;
    display: inline-block;
    font-size: 16px;
    font-weight: bold;
    padding: 0.5em 1.5em;
    text-shadow: 0 1px 1px #F7F7F7;
}
.folders li {
}
.folders .selected {
    background-color: #444444 !important;
    border-left: medium none;
    border-right-color: #AAAAAA;
    box-shadow: 1px 2px 6px #070707 inset;
    color: white;
    text-shadow: none;
}
.mails {
    border-spacing: 0;
    table-layout: fixed;
    width: 100%;
}
.mails thead {
    background-color: #BBBBBB;
    color: #444444;
    font-weight: bold;
    text-shadow: 0 1px 1px #F7F7F7;
}
.mails tbody tr:hover {
    background-color: #6688CC !important;
    color: White;
    cursor: pointer;
}
.mails th, .mails td {
    overflow: hidden;
    padding: 0.4em 0.3em;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.mails th {
    border-left: 1px solid #DDDDDD;
    border-right: 1px solid #888888;
    padding: 0.4em 0 0.3em 0.7em;
}
.mails th:nth-child(1), .mails td:nth-child(1) {
    width: 20%;
}
.mails th:nth-child(2), .mails td:nth-child(2) {
    width: 15%;
}
.mails th:nth-child(3), .mails td:nth-child(3) {
    width: 45%;
}
.mails th:nth-child(4), .mails td:nth-child(4) {
    width: 15%;
}
.mails th:last-child {
    border-right: medium none;
}
.mails tr:nth-child(2n) {
    background-color: #EEEEEE;
}
.viewMail .mailInfo {
    background-color: #DAE0E8;
    border-radius: 1em 1em 1em 1em;
    padding: 1em 1em 0.5em 1.25em;
}
.viewMail .mailInfo h1 {
    font-size: 130%;
    margin-top: 0.2em;
}
.viewMail .mailInfo label {
    color: #777777;
    display: inline-block;
    font-weight: bold;
    min-width: 2.75em;
    text-align: right;
}
.viewMail .message {
    padding: 0 1.25em;
}

</style>